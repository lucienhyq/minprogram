.topNavBox {
  background-image:
    linear-gradient(90deg,
      #fe8856 0%,
      #fd1757 100%);
}

.contenBox {
  width: 690rpx;
  height: 559rpx;
  background-color: #fff;
  box-shadow: 0rpx 1rpx 49rpx 0rpx rgba(210, 210, 210, 0.63);
  border-radius: 6rpx;
  margin: 0 auto;
  margin-top: -108rpx;
  position: relative;
}

.userImg {
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
  position: absolute;
  top: -81rpx;
  left: 270rpx;
  overflow: hidden;
}
.userName {
  text-align: center;
  font-size: 30rpx;
  color: #333;
  padding: 0 90rpx;
  padding-top: 104rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.button_1 {
  width: 535rpx;
  height: 85rpx;
  background-color: #f14e4e;
  border-radius: 43rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  line-height: 85rpx;
  margin: 0 auto;
  margin-top: 100rpx;
  position: relative;
}

.button_1 .button {
  position: absolute;
  width: 100%;
  height: 100%;
