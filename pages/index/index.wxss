/**index.wxss**/
.container {
  padding: 0 20rpx;
}

.gym {
  margin-top: 20rpx;
}

.gym .topTitle {
  background-color: #f7f7f7;
}

.gym .gymBox {
  border-radius: 20rpx;
  padding: 24rpx;
  background-color: #ffffff;
  margin-top: 15rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  box-shadow: 4rpx 8rpx 13rpx 2rpx #ebebeb;
}

.gym .gymBox .left {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: #999999;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.gym .gymBox .left image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.gymBox .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.gymBox .right .title {
  font-size: 24rpx;
}
.gymBox .pirce{
  font-size: 24rpx;
  color: red;
}

.gymBox .right .contenCell {
  flex: 1;
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
}


.initToBody {
  margin: 0 20rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.topTitle {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.lis {
  padding: 15rpx;
  display: flex;
  justify-content: space-between;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.lis .title {
  flex: 1;
  font-size: 26rpx;
}

.lis .img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.lis .imgNews{
  flex: 1;
}

.lis .img image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.bannerImg {
  width: 100%;
}