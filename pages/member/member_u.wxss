/* pages/member/member_u.wxss */
.memberBox {
  padding-bottom: 160rpx;
  min-height: 100vh;
}

.userBox {
  padding: 15rpx 20rpx;
  margin: 0 auto;
  box-sizing: border-boxs;
  background-color: bisque;
  text-align: center;
}

.memberTop {
  display: flex;
  align-items: center;
  background-color: #FF8924;
  padding: 50rpx;
  padding-bottom: 100rpx;
  background-color: #fff;
  background-image: linear-gradient(#FF8924, #f5f5f5);
}

.contenBox {
  margin-top: -80rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.memberTop .img {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
}

.memberTop .img .icon-lanqiu {
  font-size: 80rpx;
  color: #dddddd;
}

.memberTop .img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.listBox {
  margin: 0 20rpx;
  background-color: #fff;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.listBox .img {
  width: 184rpx;
  height: 184rpx;
  border-radius: 16rpx;
  background-color: #FF8924;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.listBox .img image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.listBox .list_r .title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 30rpx;
  font-weight: bold;
}

.listBox .list_r {
  flex: 1;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.listBox .list_r .create_time {
  font-size: 26rpx;
  margin-top: 20rpx;
  color: #818181;
}

.listBox .list_r .orderSn {
  font-size: 24rpx;
  color: #818181;
  display: flex;
  margin-top: 20rpx;
}

.contenBox .list {
  padding-top: 20rpx;
}
.other{
  padding: 15rpx 0;
  display: flex;
  background-color: #fff;
  margin: 0 20rpx;
  margin-bottom: 20rpx;
  border-radius: 22rpx;
}
.other .orther_plug{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 25%;
}
.other .orther_plug .iconfont{
  font-size: 60rpx;
}
.other .orther_plug .txt{
  font-size: 28rpx;
}