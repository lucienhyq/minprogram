/* pages/member/member_u.wxss */
.userBox{
  padding: 15rpx 20rpx;
  margin: 0 auto;
  box-sizing: border-boxs;
  background-color: bisque;
  text-align: center;
}
.memberTop{
  display: flex;
  align-items: center;
  background-color: #FF8924;
  padding: 50rpx;
  padding-bottom: 100rpx;
  background-color: #fff;
  background-image: linear-gradient(#FF8924, #f5f5f5);
}
.memberTop .img{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
}
.memberTop .img .icon-lanqiu{
  font-size: 80rpx;
  color: #dddddd;
}
.memberTop .img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}