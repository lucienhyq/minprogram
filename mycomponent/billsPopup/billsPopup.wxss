/* mycomponent/billsPopup/billsPopup.wxss */
@import "/mycss/iconfont.wxss";

.popBox {
  padding: 30rpx 25rpx;
  box-sizing: border-box;
  padding-top: 0;
  overflow: hidden;
}

.line {
  display: flex;
  align-items: center;
  padding-bottom: 25rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.line .left {
  margin-right: 25rpx;
  flex-shrink: 0;
}

.line .right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.line .right input {
  width: 80%;
  text-align: right;
}

.headTitl {
  text-align: center;
  margin: 30rpx 0;
  font-size: 40rpx;
  font-weight: bold;
}

.iconbox {
  flex-shrink: 0;
  width: 19%;
  text-align: center;
  padding: 10rpx 0;
  margin-bottom: 20rpx;
}

.iconbox .txt {
  font-size: 22rpx;
}

.select {
  border: 1rpx solid firebrick;
  border-radius: 15rpx;
}

.iconbox .iconfont {
  font-size: 36rpx;
}

.btn {
  margin: 0 30rpx;
  border-radius: 15rpx;
  background-color: saddlebrown;
  padding: 20rpx 0;
  text-align: center;
  color: #fff;
  margin-top: 50rpx;
}