/* mycomponent/billsPopup/billsPopup.wxss */
.popBox {
  padding: 30rpx 25rpx;
  box-sizing: border-box;
  padding-top: 0;
}

.line {
  display: flex;
  align-items: center;
  padding-bottom: 25rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.line .left {
  margin-right: 25rpx;
  flex-shrink: 0;
}

.line .right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.line .right input {
  width: 80%;
  text-align: right;
}

.headTitl {
  text-align: center;
  margin: 30rpx 0;
  font-size: 40rpx;
  font-weight: bold;
}